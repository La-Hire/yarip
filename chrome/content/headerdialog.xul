<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE dialog [
  <!ENTITY % dialogDTD SYSTEM "chrome://yarip/locale/headerdialog.dtd">
  %dialogDTD;
  <!ENTITY % buttonsDTD SYSTEM "chrome://yarip/locale/buttons.dtd">
  %buttonsDTD;
]>
<dialog id="header-dialog"
  title="&dialog.title.editHeader;"
  buttons="accept,cancel"
  onload="dialog.load();"
  ondialogaccept="dialog.accept();"
  ondialogcancel="dialog.cancel();"
  persist="screenX screenY width height"
  width="560"
  height="160"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <script type="application/x-javascript"><![CDATA[
    const Cu = Components.utils;
    var yarip = Cu.import("resource://yarip/yarip.jsm", null).wrappedJSObject;
    Cu.import("resource://yarip/constants.jsm");
    Cu.import("resource://yarip/uri.jsm");
    Cu.import("resource://yarip/map.jsm");
    Cu.import("resource://yarip/page.jsm");
    Cu.import("resource://yarip/list.jsm");
    Cu.import("resource://yarip/item.jsm");
  ]]></script>
  <script type="application/x-javascript" src="chrome://yarip/content/headerdialog.js"/>
  <script type="application/x-javascript"><![CDATA[
    var dialog = new YaripHeaderDialog();
  ]]></script>
  <stringbundleset>
    <stringbundle id="stringbundle" src="chrome://yarip/locale/overlay.properties"/>
  </stringbundleset>
  <vbox flex="1">
    <hbox align="center">
      <label value="&label.value.page;:"/>
      <menulist id="page" editable="true" flex="1">
        <menupopup id="page-menupopup"/>
      </menulist>
    </hbox>
    <hbox align="center">
      <label value="&label.value.regExp;:"/>
      <textbox id="regExp" type="autocomplete" autocompletesearch="form-history" autocompletesearchparam="regexp" enablehistory="true" completedefaultindex="false" flex="1"/>
      <button id="noSubDomain" label="&button.label.noSubDomain;" oncommand="dialog.removeSubDomain();"/>
      <button id="noPath" label="&button.label.noPath;" oncommand="dialog.removePath();"/>
      <button id="noQueryFragment" label="&button.label.noQueryFragment;" oncommand="dialog.removeQueryFragment();"/>
    </hbox>
    <hbox align="center">
      <label value="&label.value.headerName;:"/>
      <textbox id="headerName" type="autocomplete" autocompletesearch="form-history" autocompletesearchparam="header_name" enablehistory="true" completedefaultindex="false" flex="1"/>
    </hbox>
    <textbox id="script" multiline="true" oninput="dialog.setScript(this.value);" persist="height" flex="1"/>
  </vbox>
</dialog>
